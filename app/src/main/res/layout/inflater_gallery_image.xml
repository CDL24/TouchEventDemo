<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/small_margin">

    <FrameLayout
        android:layout_width="@dimen/profile_image"
        android:layout_height="@dimen/profile_image">

        <ImageView
            android:id="@+id/gallery_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_img_box" />

        <ImageView
            android:id="@+id/gallery_img_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageView
        android:id="@+id/gallery_img_status"
        android:layout_width="@dimen/textsize16"
        android:layout_height="@dimen/textsize16"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_img_status_offer" />

</LinearLayout>